<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.LoginController">
    <Label text="Username: " textAlignment="RIGHT" HBox.hgrow="ALWAYS" />
    <TextField fx:id="usernameField" HBox.hgrow="ALWAYS" />
    <Button defaultButton="true" onAction="#handleLogin" text="Done" HBox.hgrow="ALWAYS" />
   <padding>
      <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
   </padding>
</HBox>
